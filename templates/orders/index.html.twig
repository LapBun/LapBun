{% extends 'admin.html.twig' %}

{# {% block title %}Customer index{% endblock %} #}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1100px; width: 90%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    td, th, a{ font-size: 12px}
</style>

<div class="example-wrapper">
    <h2>Orders Information</h2>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        {% for c in orders %}
           {# date = c.createdate; #}
            <tr>
                <td>{{ c.id }}</td>
                <td>{{ c.ouser}}</td>
                <td>{{ c.oproduct }}</td>
                <td>{{ c.quantity }}</td>
                <td>{{ c.createdate ? c.createdate|date('d-m-Y') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr> 
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}