{% extends 'base.html.twig' %}

{# {% block title %}Customer{% endblock %} #}

{% block body %}
    <h1>Account</h1>

    <table class="table">
<tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ user.birthday ? user.birthday|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>
    {% endblock %}